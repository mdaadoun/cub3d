	"version": "0.2.0",
	"configurations": [
		{
			"name": "DEBUG cub3D",
			"type": "cppdbg",
			"preLaunchTask": "make_cub3D",
			"request": "launch",
			"program": "${workspaceFolder}/cub3D",
			"args": ["${workspaceFolder}/maps/map_basica.cub"],
			"stopAtEntry": false,
			"cwd": "${fileDirname}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			]
		},
		{
			"name": "DEBUG cub3D SIMPLE",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/cub3D",
			"stopAtEntry": false,
			"cwd": "${fileDirname}",
			"args": ["${workspaceFolder}/maps/map_basica.cub"],
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			]
		}
	]
}